<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Donors.DonorsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Blood Bank"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:elevation="20dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:onClick="gobooknew"
                        android:text="حجز موعد جديد"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:onClick="gomyinfo"
                        android:text="بياناتي"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"

                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:onClick="golastopp"
                        android:text="المواعيد السابقه"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:onClick="gocurrentOpp"
                        android:text="المواعيد الحاليه"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:onClick="goprofile"
                        android:text="الملف الشخصي"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:onClick="godonations"
                        android:text="تبرعاتي"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">



                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="120dp"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:onClick="gonotifications"
                        android:text="تنبيهات"
                        android:textColor="#fff"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:elevation="20dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:onClick="goOut"
                    android:text="تسجيل خروج"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </LinearLayout>


</ScrollView>